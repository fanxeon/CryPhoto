<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.activities.TesterActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/btnTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignTop="@+id/imageViewPicTaken"
        android:text="Take Photo" />

    <ImageView
        android:id="@+id/imageViewPicTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="68dp"
        android:layout_toRightOf="@+id/btnTakePhoto"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/btnDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnTakePhoto"
        android:layout_below="@+id/btnTakePhoto"
        android:layout_marginTop="109dp"
        android:text="Retrieve DB" />

    <ImageView
        android:id="@+id/imgViewDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageViewPicTaken"
        android:layout_alignTop="@+id/btnDB"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>